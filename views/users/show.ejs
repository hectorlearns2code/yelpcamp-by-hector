<% include ../partials/header %>

<div class="container mt-4">
    <div class="row">
        <div class="col-lg-3">
            <div class="card mb-3">
                <div class="row">
                    <div class="col-sm-6 col-lg-12">
                        <img class="avatar" src="<%= user.avatar %>" alt="user profile image">
                    </div>
                    <div class="col-sm-6 col-lg-12 pl-sm-0 pl-lg-3">
                        <div class="card-body pl-sm-0 pl-lg-3">
                            <h4 class="card-title mb-1 d-inline-block"><%= user.firstName + " " + user.lastName %></h4>
                            <% if(currentUser && currentUser.id === user.id) { %>
                                <div class="d-inline-block">
                                    <div class="drop-left">
                                        <button class="options-button" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fas fa-ellipsis-h"></i></button>
                                        <div class="dropdown-menu">
                                            <a class="dropdown-item" href="/users/<%= user.id %>/edit">Edit User</a>
                                        </div>
                                    </div>
                                </div>
                            <% } %>
                            <a class="d-block" href="mailto:<%= user.email %>"><%= user.email %></a>

                            <hr>
                            <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Molestiae ullam minima quis, expedita accusamus perferendis a odit autem sed saepe.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-lg-9">
            <h3 class="mt-3 mt-lg-0"><%= user.username %>'s campgrounds</h3>
            <div class="row mt-3">
                <% campgrounds.forEach(function(campground) { %>
                    <div class="col-sm-6 col-lg-4 mb-3">
                        <div class="card">
                            <a href="/campgrounds/<%= campground._id %>" class="camp-img-preview">
                                <img class="card-img-top" src="<%= campground.image %>">
                            </a>
                            <div class="card-body">
                                <a href="/campgrounds/<%= campground.id %>">
                                    <h5 class="card-title no-overflow mb-0"><%= campground.name %></h5>
                                </a>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
</div>


<% include ../partials/footer %>