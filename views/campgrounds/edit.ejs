<% include ../partials/header %>

<div class="container mt-4">
	<h1 class="text-center">Edit <%= campground.name %></h1>
	<div class="row">
		<div class="form-container">
			<div>
				<form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
					<div class="form-group">
						<label for="name">Campground Name</label>
						<input class="form-control" type="text" id="name" name="campground[name]" value="<%= campground.name %>">
					</div>
					<div class="form-group">
						<label for="price">Price per Night</label>
						<input class="form-control" type="number" id="price" name="campground[price]" value="<%= campground.price %>" min="0.01" step="0.01">
					</div>
					<div class="form-group">
						<label for="image">Image</label>
						<input type="file" id="image" name="image" accept="image/*">
					</div>
					<div class="form-group">
						<label for="description">Description</label>
						<textarea class="form-control" name="campground[description]" id="description" cols="30" rows="10"><%= campground.description %></textarea>
					</div>
					<div class="form-group">
						<label for="location">Location</label>
						<input class="form-control" type="text" name="location" id="location" value="<%= campground.location %>">
					</div>
					<div class="form-group">
						<button class="btn btn-lg btn-primary btn-block">Submit</button>
					</div>
			</form>
	
			<a href="/campgrounds">Go Back</a>
			</div>
		</div>
	</div>
</div>

<% include ../partials/footer %>